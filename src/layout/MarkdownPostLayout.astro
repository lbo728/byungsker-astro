---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <p><em>{frontmatter.description}</em></p>
  <p><b>{frontmatter.pubDate.toString().slice(0, 10)}</b></p>
  <img src={frontmatter.image.url} width="360" alt={frontmatter.image.alt} />
  <div class="tag-wrap">
    {
      frontmatter.tags.map((tag: any) => (
        <div class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </div>
      ))
    }
  </div>
  <slot />
</BaseLayout>

<style>
  a {
    color: #5081af;
  }

  .tag-wrap {
    margin: 24px 0;
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    font-size: 14px;
  }

  .tag {
    padding: 4px 8px;
    font-size: 1.15em;
    border-radius: 4px;
    color: #0e223c;
    background-color: #f6f8fa;
    font-size: 12px;
    transition: opacity 500ms ease 0s;
  }
</style>
