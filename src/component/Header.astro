---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav>
    <div class="nav-bar">
      <Hamburger />
      <div class="nav-bar-right">
        <Navigation />
        <ThemeIcon />
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-bar {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }

  .nav-bar-right {
    display: flex;
    flex-direction: row;
    justify-content: end;
    width: 100%;
  }
</style>
